{
  "manifest_version": 2,
  "name": "RightTasks for Gmailâ„¢",
  "description": "Adds your Google Tasks to a right sidebar in Gmail, like in Google Calendar.",
  "version": "2.6.8",
  "icons": {
    "16": "images/righttasks-icon-16.png",
    "48": "images/righttasks-icon-48.png",
    "128": "images/righttasks-icon-128.png"
  },
  "permissions": [
    "storage",
    "https://mail.google.com/",
    "https://tasks.google.com/embed/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://tasks.google.com/embed/*"
      ],
      "all_frames": true,
      "css": [ "content.css" ],
      "js": [ "content.js" ]
    }
  ],
  "web_accessible_resources": [ "content.css" ]
}
